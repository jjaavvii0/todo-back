{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "typeRoots" : ["./src/types", "./node_modules/@types"],
      "types": ["node", "jest"]
    },
    "include": ["src/**/*.ts", "./src/types", "**/*.test.ts"],
    "exclude": ["node_modules", "dist"]
  }

  